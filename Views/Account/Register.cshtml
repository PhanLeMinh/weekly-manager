@model WeeklyScheduleManagement.Models.RegisterViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký - Hệ Thống Quản Lý Lịch Tuần</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 30px 0;
        }
        .register-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            padding: 50px;
            max-width: 600px;
            width: 100%;
        }
        .register-header {
            text-align: center;
            margin-bottom: 40px;
        }
        .register-header h2 {
            color: #667eea;
            font-weight: bold;
        }
        .form-control {
            border-radius: 10px;
            border: 2px solid #e0e0e0;
            padding: 12px 15px;
        }
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        .btn-register {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
            width: 100%;
        }
        .btn-register:hover {
            transform: scale(1.02);
            color: white;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
            <h2>Đăng Ký Tài Khoản</h2>
            <p class="text-muted">Tạo tài khoản mới để sử dụng hệ thống</p>
        </div>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="HoTen" class="form-label"><i class="fas fa-user"></i> Họ và Tên</label>
                <input asp-for="HoTen" class="form-control" placeholder="Nguyễn Văn A" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"><i class="fas fa-envelope"></i> Email</label>
                <input asp-for="Email" class="form-control" placeholder="example@university.edu.vn" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SoDienThoai" class="form-label"><i class="fas fa-phone"></i> Số điện thoại</label>
                <input asp-for="SoDienThoai" class="form-control" placeholder="0901234567" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MatKhau" class="form-label"><i class="fas fa-lock"></i> Mật khẩu</label>
                <input asp-for="MatKhau" type="password" class="form-control" placeholder="Tối thiểu 6 ký tự" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="XacNhanMatKhau" class="form-label"><i class="fas fa-lock"></i> Xác nhận mật khẩu</label>
                <input asp-for="XacNhanMatKhau" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-register">
                <i class="fas fa-user-plus"></i> Đăng Ký
            </button>

            <div class="text-center mt-3">
                <p>Đã có tài khoản? <a asp-action="Login" style="color: #667eea; font-weight: 600;">Đăng nhập ngay</a></p>
            </div>
        </form>
    </div>
</body>
</html>