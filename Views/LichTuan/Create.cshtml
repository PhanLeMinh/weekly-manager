@model WeeklyScheduleManagement.Models.LichTuan

@{
    ViewData["Title"] = "Đăng Ký Lịch Tuần";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-header mb-4">
    <h2><i class="fas fa-calendar-plus"></i> Đăng Ký Lịch Tuần Làm Việc</h2>
    <p class="text-muted">Vui lòng điền đầy đủ thông tin để đăng ký lịch tuần</p>
</div>

<form asp-action="Create" method="post" id="scheduleForm">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="form-section">
        <h5 class="section-title"><i class="fas fa-info-circle"></i> Thông Tin Cơ Bản</h5>
        
        <div class="mb-3">
            <label asp-for="TenLichTuan" class="form-label required-label">Tên Lịch</label>
            <input asp-for="TenLichTuan" class="form-control" placeholder="VD: Họp phụ huynh khối 12" required />
            <span asp-validation-for="TenLichTuan" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NoiDung" class="form-label required-label">Nội Dung</label>
            <textarea asp-for="NoiDung" class="form-control" rows="4" placeholder="Mô tả chi tiết nội dung công việc..." required></textarea>
            <span asp-validation-for="NoiDung" class="text-danger"></span>
        </div>
    </div>

    <div class="form-section">
        <h5 class="section-title"><i class="fas fa-clock"></i> Thời Gian</h5>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="NgayBatDau" class="form-label required-label">Ngày Bắt Đầu</label>
                <input asp-for="NgayBatDau" type="datetime-local" class="form-control" required />
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="NgayKetThuc" class="form-label required-label">Ngày Kết Thúc</label>
                <input asp-for="NgayKetThuc" type="datetime-local" class="form-control" required />
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-section">
        <h5 class="section-title"><i class="fas fa-users"></i> Người Liên Quan</h5>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="MaChuTri" class="form-label required-label">Người Chủ Trì</label>
                <select asp-for="MaChuTri" class="form-select" required>
                    <option value="">-- Chọn người chủ trì --</option>
                    @if (ViewBag.NguoiDungs != null)
                    {
                        @foreach (var item in ViewBag.NguoiDungs)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="MaChuTri" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="MaDiaDiem" class="form-label required-label">Địa Điểm</label>
                <select asp-for="MaDiaDiem" class="form-select" required>
                    <option value="">-- Chọn địa điểm --</option>
                    @if (ViewBag.DiaDiems != null)
                    {
                        @foreach (var item in ViewBag.DiaDiems)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="MaDiaDiem" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-section">
        <h5 class="section-title"><i class="fas fa-user-friends"></i> Thành Phần Tham Gia</h5>
        
        <div id="membersContainer">
            <div class="member-item">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <label class="form-label">Thành viên</label>
                        <select name="thanhPhanIds" class="form-select">
                            <option value="">-- Chọn thành viên --</option>
                            @if (ViewBag.NguoiDungs != null)
                            {
                                @foreach (var item in ViewBag.NguoiDungs)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Vai trò</label>
                        <select name="vaiTros" class="form-select">
                            <option value="Tham gia">Tham gia</option>
                            <option value="Hỗ trợ">Hỗ trợ</option>
                            <option value="Báo cáo">Báo cáo</option>
                            <option value="Ghi chép">Ghi chép</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button type="button" class="btn btn-danger w-100" onclick="removeMember(this)">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <button type="button" class="btn btn-add-member mt-3" onclick="addMember()">
            <i class="fas fa-plus"></i> Thêm thành viên
        </button>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-submit">
            <i class="fas fa-paper-plane"></i> Đăng Ký Lịch
        </button>
        <a asp-action="Index" class="btn btn-cancel ms-3">
            <i class="fas fa-times"></i> Hủy bỏ
        </a>
    </div>
</form>

<style>
    .form-header {
        text-align: center;
        padding-bottom: 20px;
        border-bottom: 3px solid #667eea;
    }
    .form-header h2 {
        color: #667eea;
        font-weight: bold;
    }
    .form-section {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 15px;
        margin-bottom: 25px;
    }
    .section-title {
        color: #667eea;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e0e0e0;
    }
    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
    }
    .required-label::after {
        content: " *";
        color: #dc3545;
    }
    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e0e0e0;
        padding: 12px 15px;
        transition: all 0.3s;
    }
    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    .member-item {
        background: white;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 15px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }
    .btn-add-member {
        background: #28a745;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s;
    }
    .btn-add-member:hover {
        background: #218838;
        transform: scale(1.05);
    }
    .btn-submit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 15px 50px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s;
    }
    .btn-submit:hover {
        transform: scale(1.05);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }
    .btn-cancel {
        background: #6c757d;
        color: white;
        border: none;
        padding: 15px 50px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1.1rem;
    }
    .btn-cancel:hover {
        background: #5a6268;
        color: white;
    }
</style>

<script>
    function addMember() {
        const memberHTML = `
            <div class="member-item">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <label class="form-label">Thành viên</label>
                        <select name="thanhPhanIds" class="form-select">
                            <option value="">-- Chọn thành viên --</option>
                            @if (ViewBag.NguoiDungs != null)
                            {
                                @foreach (var item in ViewBag.NguoiDungs)
                                {
                                    <text><option value="@item.Value">@item.Text</option></text>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Vai trò</label>
                        <select name="vaiTros" class="form-select">
                            <option value="Tham gia">Tham gia</option>
                            <option value="Hỗ trợ">Hỗ trợ</option>
                            <option value="Báo cáo">Báo cáo</option>
                            <option value="Ghi chép">Ghi chép</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button type="button" class="btn btn-danger w-100" onclick="removeMember(this)">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        `;
        document.getElementById('membersContainer').insertAdjacentHTML('beforeend', memberHTML);
    }

    function removeMember(button) {
        const memberItems = document.querySelectorAll('.member-item');
        if (memberItems.length > 1) {
            button.closest('.member-item').remove();
        } else {
            alert('Phải có ít nhất một thành viên!');
        }
    }

    // Validation thời gian
    document.getElementById('scheduleForm').addEventListener('submit', function(e) {
        const startDate = new Date(document.querySelector('input[name="NgayBatDau"]').value);
        const endDate = new Date(document.querySelector('input[name="NgayKetThuc"]').value);
        
        if (endDate <= startDate) {
            e.preventDefault();
            alert('Ngày kết thúc phải sau ngày bắt đầu!');
        }
    });
</script>